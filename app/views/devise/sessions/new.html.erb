<h2 class="ui teal header">
  <div class="content">
    <%= t('devise.sessions.sign_in') %>
  </div>
</h2>

<%= form_for(resource, as: resource_name,
                       url: session_path(resource_name),
                       html: { class: "ui large error form" }) do |f| %>

  <div class="ui piled segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="mail icon"></i>
        <%= f.email_field :email, autofocus: true, placeholder: t('devise.sessions.email') %>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: t('devise.sessions.password') %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field inline">
        <div class="ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit I18n.t('devise.sessions.log_in'), class: "ui fluid large teal submit button" %>
    </div>
  </div>
<% end %>

<div class="ui message">
  <%= render "devise/shared/links" %>
</div>
